<header class="fixed w-full bg-white/90 backdrop-blur-sm shadow-sm z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold text-green-600">
      <span class="text-blue-400">Coco</span>Fresh
    </a>
    
    <nav class="hidden md:flex space-x-8">
      <a href="#beneficios" class="text-gray-700 hover:text-green-600 transition-colors">Benefícios</a>
      <a href="#produtos" class="text-gray-700 hover:text-green-600 transition-colors">Produtos</a>
      <a href="#depoimentos" class="text-gray-700 hover:text-green-600 transition-colors">Depoimentos</a>
      <a href="#faq" class="text-gray-700 hover:text-green-600 transition-colors">FAQ</a>
      <a href="#contato" class="text-gray-700 hover:text-green-600 transition-colors">Contato</a>
    </nav>
    
    <div class="md:hidden">
      <button id="menu-toggle" class="text-gray-700 hover:text-green-600 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
    <div class="container mx-auto px-4 py-3 space-y-3">
      <a href="#beneficios" class="block text-gray-700 hover:text-green-600 transition-colors">Benefícios</a>
      <a href="#produtos" class="block text-gray-700 hover:text-green-600 transition-colors">Produtos</a>
      <a href="#depoimentos" class="block text-gray-700 hover:text-green-600 transition-colors">Depoimentos</a>
      <a href="#faq" class="block text-gray-700 hover:text-green-600 transition-colors">FAQ</a>
      <a href="#contato" class="block text-gray-700 hover:text-green-600 transition-colors">Contato</a>
    </div>
  </div>
</header>

<script>
  // Toggle mobile menu
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
